{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "ESNext",
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "ui": ["./src/components/ui"],
      "hooks/*": ["./src/config/hooks/*"],
      "content-collections": ["./.content-collections/generated"],
      "#site/content": ["./.source"],
      "@/utils/classes": ["./src/config/utils/classes.ts"],
      "@/utils/use-media-query": ["./src/config/utils/use-media-query.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.mjs"],
  "exclude": [
    "node_modules",
    "src/resources/stubs",
    "src/resources/content/**/*.mdx",
    "src/resources/scripts/build-registry.mts",
    ".next",
    "__registry__"
  ]
}
